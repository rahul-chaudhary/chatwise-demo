<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="16dp">

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="productImage" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/productCard"
        android:layout_width="match_parent"
        app:strokeWidth="0dp"
        android:elevation="10dp"
        android:layout_height="0dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/productCard"
        app:layout_constraintDimensionRatio="1:1.5"
        app:layout_constraintEnd_toStartOf="@id/productName"
        app:layout_constraintStart_toStartOf="@id/productCard"
        app:layout_constraintTop_toTopOf="@id/productCard"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/productDescription"
        app:layout_constraintEnd_toEndOf="@id/productCard"
        app:layout_constraintStart_toEndOf="@id/barrier"
        app:layout_constraintTop_toTopOf="@id/productCard"
        app:layout_constraintVertical_bias="0"
        tools:text="Product Name" />

    <TextView
        android:id="@+id/productDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="viewStart"
        android:ellipsize="marquee"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/productCard"
        app:layout_constraintEnd_toEndOf="@id/productCard"
        app:layout_constraintStart_toEndOf="@id/barrier"
        app:layout_constraintTop_toBottomOf="@id/productName"
        app:layout_constraintHorizontal_bias="0"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla nec odio." />
</androidx.constraintlayout.widget.ConstraintLayout>